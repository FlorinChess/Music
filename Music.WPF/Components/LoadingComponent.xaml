<UserControl x:Class="Music.WPF.Components.LoadingComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:custom="clr-namespace:Music.CustomControls.LoadingSpinner;assembly=Music.CustomControls"
             xmlns:viewmodels="clr-namespace:Music.WPF.ViewModels"
             mc:Ignorable="d" IsTabStop="False"
             d:DataContext="{d:DesignInstance {x:Type viewmodels:LoadingComponentViewModel}}"
             d:DesignHeight="200" d:DesignWidth="200">
    <custom:LoadingSpinner Color="{DynamicResource Primary}" Thickness="5" IsLoading="True" Background="{StaticResource MainBackgroundBrush}" />
</UserControl>
