<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:custom="clr-namespace:Music.CustomControls.PlaceholderTextBox;assembly=Music.CustomControls">
    <Style TargetType="{x:Type custom:PlaceholderTextBox}">
        <Setter Property="Background" Value="{StaticResource MenuItemHoverBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CaretBrush" Value="{StaticResource LightGrayBrush}" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Cursor" Value="IBeam" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Height" Value="40" />
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
</ResourceDictionary>